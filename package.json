{
    "name": "contentful-hugo",
    "type": "module",
    "version": "4.2.1",
    "packageManager": "pnpm@9.0.5",
    "description": "Node module that pulls data from Contentful and turns it into markdown files for Hugo. Can be used with other Static Site Generators, but has some Hugo specific features.",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "bin": {
        "contentful-hugo": "./dist/cli.mjs"
    },
    "files": [
        "dist",
        "postInstall.js"
    ],
    "repository": {
        "typ": "git",
        "url": "https://github.com/ModiiMedia/contentful-hugo"
    },
    "keywords": [
        "hugo",
        "contentful",
        "blog",
        "markdown",
        "yaml",
        "ssg",
        "website",
        "static-site-generator",
        "jamstack",
        "frontmatter",
        "static-site"
    ],
    "author": {
        "name": "Joshua Sosso",
        "email": "josh@modiimedia.com",
        "url": "https://www.modiimedia.com"
    },
    "scripts": {
        "test": "vitest run --coverage",
        "lint": "eslint ./src",
        "lint:fix": "eslint ./src --fix",
        "format": "prettier --write src guides examples",
        "typecheck": "tsc --noEmit",
        "postinstall": "node postInstall.js",
        "prebuild": "pnpm run lint",
        "build": "tsc --noEmit && unbuild",
        "postbuild": "jiti ./copyAssets.ts",
        "prepare": "pnpm run build",
        "server-dev": "pnpm run build && node dist/cli.mjs --server"
    },
    "license": "ISC",
    "dependencies": {
        "@contentful/rich-text-html-renderer": "^17.0.0",
        "@contentful/rich-text-plain-text-renderer": "^17.0.0",
        "@contentful/rich-text-types": "^17.0.0",
        "async-limiter": "^2.0.0",
        "c12": "^3.0.2",
        "chokidar": "^3.6.0",
        "citty": "^0.1.6",
        "contentful": "^11.5.4",
        "dotenv": "^16.4.7",
        "fastify": "^5.2.1",
        "fs-extra": "^11.3.0",
        "js-yaml": "^4.1.0",
        "json-to-pretty-yaml": "^1.2.2",
        "pathe": "^2.0.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@modii/tscpaths": "^0.2.3",
        "@types/fs-extra": "^11.0.4",
        "@types/js-yaml": "^4.0.9",
        "@types/json-to-pretty-yaml": "^1.2.1",
        "@types/node": "^22.13.10",
        "@types/yargs": "^17.0.33",
        "@vitest/coverage-v8": "^3.0.8",
        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-n": "^17.16.2",
        "jiti": "^2.4.2",
        "prettier": "^3.5.3",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.0",
        "unbuild": "^3.5.0",
        "vite": "^6.2.1",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.0.8"
    }
}
